
@{
    ViewData["Title"] = "Accesso negado";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="wrapper-erro row justify-content-center">
    <div class="container-erro col-8 col-md-7 col-lg-5 col-xl-4">
		<i class="bi bi-x-circle-fill text-danger"></i>
        <h2>Acesso negado!</h2>
        <h5>Você não tem permissão para acessar esse recurso.</h5>
		@if (User.Identity.IsAuthenticated)
		{
			<a class="opcao-voltar btn btn-primary-app" asp-controller="Home" asp-action="Index">Voltar para página inicial</a>
		}
		else
		{
			<div class="btn btn-primary-app">
				<a class="opcao-login" asp-controller="Usuarios" asp-action="Login">Fazer login</a>
			</div>
		}
    </div>
</div>


@model app.Models.Usuario
@using app.Enums

<div class="form-group col-12">
    <div class="container-endereco row">
        <div class="label-endereco col-12">Endereço</div>
        <div class="form-group form-floating col-12">
            <input asp-for="Rua" class="form-control" placeholder="Rua" />
            <label asp-for="Rua" class="control-label"></label>
            <span asp-validation-for="Rua" class="text-danger"></span>
        </div>
        <div class="form-group form-floating col-sm-3">
            <input asp-for="Numero" class="form-control" placeholder="Número" />
            <label asp-for="Numero" class="control-label"></label>
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group form-floating col-sm-9 col-md-5">
            <input asp-for="Complemento" class="form-control" placeholder="Complemento (Opcional)" />
            <label asp-for="Complemento" class="control-label">Complemento (Opcional)</label>
            <span asp-validation-for="Complemento" class="text-danger"></span>
        </div>
        <div class="form-group form-floating col-md-4">
            <input asp-for="Bairro" class="form-control" placeholder="Bairro" />
            <label asp-for="Bairro" class="control-label"></label>
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
        <div class="form-group form-floating col-md-6">
            <input asp-for="Cidade" class="form-control" placeholder="Cidade" />
            <label asp-for="Cidade" class="control-label"></label>
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group form-floating col-md-6">
            <select asp-for="Estado" asp-items="Html.GetEnumSelectList<Estado>()" class="form-control form-select">
                <option value="" disabled selected>Selecione...</option>
            </select>
            <label asp-for="Estado" class="control-label"></label>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group col-12">
    <label asp-for="Email" class="control-label default-label">E-mail</label>
    <input asp-for="Email" class="form-control" placeholder="seuemail@exemplo.com" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group col-md-6">
    <label asp-for="Senha" class="control-label default-label">Senha</label>
    <input asp-for="Senha" class="form-control" />
    <span asp-validation-for="Senha" class="text-danger"></span>
</div>
<div class="form-group col-md-6">
    <label asp-for="ConfirmaSenha" class="control-label default-label">Confirme sua senha</label>
    <input asp-for="ConfirmaSenha" class="form-control" />
    <span asp-validation-for="Senha" class="text-danger"></span>
</div>

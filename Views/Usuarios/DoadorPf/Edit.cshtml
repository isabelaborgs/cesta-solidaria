@model app.Models.UsuarioDoadorPf

@{
    ViewData["Title"] = "Editar dados";
}

<div class="row justify-content-center">
    <div class="wrapper-user wrapper-edit-user col-lg-8 col-xl-7">
        <h1 class="page-title header-user header-edit-user">
            Editar dados da conta
        </h1>

        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h5>Ambiente de Teste - Não insira dados reais!</h5>
            Este é um ambiente de demonstração. Os dados são temporários (serão apagados ao reiniciar) e não possuem a segurança de um sistema real. Por favor, NÃO insira informações sensíveis ou pessoais verdadeiras.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="container-form-user container-form-edit-user align-items-center">
            <form asp-action="EditDoadorPf" class="form-user form-edit-user row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group col-12">
                    <label asp-for="Nome" class="control-label default-label">Nome completo</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Cpf" class="control-label default-label">CPF</label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DataNascimento" class="control-label default-label">Data de nascimento</label>
                    <input type="date" asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Telefone" class="control-label default-label">Telefone</label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <partial name="_FormUsuarioPartial" model="@Model" />
                
                <div class="form-group col-12">
                    <input type="submit" value="Salvar alterações" class="btn btn-primary-app salvar-edit-user" />
                </div>
            </form>
            <div class="opcao-cancelar">
                <a asp-action="Details" class="link-app">Cancelar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@using app.Enums
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cesta Solidária</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/app.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="page-wrapper">
        <div>
            <header>
                <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white border-bottom box-shadow mb-3" id="navLanding">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <img class="navbar-logo" src="~/img/logotipo.svg" alt="Logotipo Cesta Solidária" />
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 justify-content-end">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item nav-item-group">
                                        <a class="nav-link btn btn-primary-app" asp-controller="Home" asp-action="PaginaInicial">
                                            Minha Cesta Solidária
                                        </a>
                                        <a class="nav-link btn-logout" asp-controller="Usuarios" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-secondary-app" asp-controller="Usuarios" asp-action="Login">
                                            Fazer login
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link btn btn-primary-app" data-bs-toggle="modal" data-bs-target="#modalCadastro">
                                            Cadastrar-se
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                    <div class="modal fade" id="modalCadastro" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content shadow">
                                <div class="modal-header">
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <h3 class="text-center mb-4">Qual tipo de cadastro você gostaria de fazer?</h3>
                                    <div class="row opcoes-cadastro" id="escolher-tipo-cadastro">
                                        <div class="col-12">
                                            <a class="opcao-cadastro" asp-controller="Usuarios" asp-action="Create" asp-route-tipo="@TipoUsuario.DoadorPf">
                                                <i class="bi bi-person-fill"></i>
                                                <div>
                                                    <div class="label-opcao">
                                                        Pessoa Física
                                                    </div>
                                                    <div class="descricao-opcao">
                                                        Quero doar alimentos como pessoa física
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-12">
                                            <a class="opcao-cadastro" asp-controller="Usuarios" asp-action="Create" asp-route-tipo="@TipoUsuario.DoadorPj">
                                                <i class="bi bi-building"></i>
                                                <div>
                                                    <div class="label-opcao">
                                                        Empresa
                                                    </div>
                                                    <div class="descricao-opcao">
                                                        Quero doar alimentos como pessoa jurídica
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="col-12">
                                            <a class="opcao-cadastro" asp-controller="Usuarios" asp-action="Create" asp-route-tipo="@TipoUsuario.Ong">
                                                <i class="bi bi-house-heart"></i>
                                                <div>
                                                    <div class="label-opcao">
                                                        ONG
                                                    </div>
                                                    <div class="descricao-opcao">
                                                        Quero receber doações como ONG
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <div class="text-center mb-4">
                    <small>
                        Projeto desenvolvido no segundo semestre de Análise e Desenvolvimento de Sistemas na PUC Minas.
                    </small>
                </div>
            </div>
        </div>

        <footer class="border-top">
            <div class="footer-container">
                <div class="copyright">
                    <img class="footer-logo" src="~/img/icone-rodape.svg" alt="Logotipo Cesta Solidária" />
                    &copy; 2025 - Cesta Solidária
                </div>
                <div class="links">
                    <a href="https://github.com/isabelaborgs/cesta-solidaria" target="_blank"> 
                        Sobre o Projeto
                        <i class="bi bi-box-arrow-up-right"></i>
                    </a>
                </div>
                <div class="redes-sociais">
                    <button class="btn-icon"><span style="font-weight:600;">in</span></button>
                    <button class="btn-icon"><i class="bi bi-envelope"></i></button>
                    <button class="btn-icon"><i class="bi bi-instagram"></i></button>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
